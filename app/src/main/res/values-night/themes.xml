<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black_light_middle</item>
        <item name="colorPrimaryVariant">@color/black_light</item>
        <item name="colorOnPrimary">@color/gray_text</item>
        <item name="background">@color/black_light</item>
        <item name="backgroundColor">@color/black_light</item>

        <item name="colorSecondary">@color/black_light</item>
        <item name="colorSecondaryVariant">@color/black_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor"></item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MyApplication.RecyclerViewTicketDetail">
        <item name="android:background">?attr/background</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo" >
        <item name="android:backgroundTint">@color/black_light_more</item>
        <item name="android:background">@color/black_light_more</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.Text" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.NumberTicket">
        <item name="android:textColor">@color/blue_enabled</item>
    </style>
    <style name="Theme.MyApplication.ContainerInfo.Text.Others">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MyApplication.EditText">
        <item name="android:background">@color/black_light_middle</item>
    </style>

    <style name="Theme.MyApplication.FAB" parent="Theme.MyApplication">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="Theme.MyApplication.BottomNavigation" >
        <item name="android:background">@drawable/bottom_background_transparent_dark</item>
        <item name="itemIconTint">@color/bottom_background</item>
        <item name="itemTextColor">@color/bottom_background</item>
    </style>

</resources>