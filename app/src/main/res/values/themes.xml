<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_enabled</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="background">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/background_ticket_details</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication.RecyclerViewTicketDetail" >
        <item name="android:background">@color/background_ticket_details</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo" >
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.Text" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.NumberTicket">
        <item name="android:textColor">@color/blue_enabled</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.Text.Date" parent="Theme.MyApplication.CardView">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Theme.MyApplication.ContainerInfo.Text.Others">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Theme.MyApplication.EditText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.MyApplication.BottomNavigation">
        <item name="android:background">@drawable/bottom_background_transparent_light</item>
        <item name="itemIconTint">@color/bottom_background</item>
        <item name="itemTextColor">@color/bottom_background</item>
    </style>

    <style name="Theme.MyApplication.CardView" parent="CustomCardViewStyle">
        <item name="android:backgroundTint">@color/green_send_mensage</item>
    </style>
</resources>